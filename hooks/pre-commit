#!/bin/bash
# Git pre-commit hook: format, compile check, and lint
echo "ğŸ” Running pre-commit checks: fmt, check, clippy"
cargo fmt -- --check || { echo 'âŒ cargo fmt failed'; exit 1; }
cargo check || { echo 'âŒ cargo check failed'; exit 1; }
cargo clippy -- -D warnings || { echo 'âŒ cargo clippy failed'; exit 1; }
echo "âœ… Pre-commit checks passed"
 
